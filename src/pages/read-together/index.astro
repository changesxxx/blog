---
import ExampleGrid from '@/components/example-grid.astro'
import PageHeader from '@/components/page-header.astro'
import { booksConfig } from '@/config/books'
import MainLayout from '@/layouts/main-layout.astro'

const booksNav = booksConfig.booksNav
---

<MainLayout title="">
  <div class="bg-background-200">
    <section class="container py-12">
      <PageHeader
        heading="推荐书籍"
        text="我这儿有几本武林秘籍，见与你有缘就送你了！"
      />

      {
        booksNav.map((book) => {
          return <ExampleGrid title={book.type} items={book.items} />
        })
      }
    </section>
  </div>
</MainLayout>
