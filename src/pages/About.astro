  } */

  .intro__waves {
    background-color: transparent;
    width: 100vw;
    /*     position: absolute;
    top: 0; */
    transform: translateY(-50%);

    .base-image {
      display: block;
      overflow: hidden;
    }

    img {
      max-width: inherit;
    }
  }

  .is--home {
    height: 100%;
    background-image: url('/assets/images/page/home/light.svg');

    background-size:
      105px 105px,
      105px 105px,
      21px 21px,
      21px 21px;
    background-position: 100% 0;
    background-repeat: no-repeat;
    background-size: contain;
  }

  .spray-bg-container {
    z-index: 0;
    opacity: 0.6;
    pointer-events: none;
    mix-blend-mode: multiply;
    // background-image: url('/assets/images/page/home/cartoon_logo_cover.png');
    background-position: 50%;
    background-repeat: no-repeat;
    background-size: cover;
    background-attachment: scroll;
    width: 100%;
    height: 100%;
    position: absolute;
    inset: 0%;
    overflow: hidden;
  }

  .connectors-hero-graphic-container {
    pointer-events: none;
    justify-content: center;
    align-items: flex-end;
    height: 220px;
    overflow: hidden;
  }

  .w-layout-hflex {
    flex-direction: row;
    align-items: flex-start;
    display: flex;
  }

  .connectors-hero-graphic {
    width: 110%;
    max-width: none;
    position: absolute;
    bottom: 0;
  }
</style>
